<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_purchase_request_import_form" model="ir.ui.view">
        <field name="name">purchase.request.import.form</field>
        <field name="model">purchase.request.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Purchase Request">
                <sheet>
                    <group>
                        <field name="excel_file" required="1" widget="binary" filename="filename"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <div class="alert alert-info" role="alert">
                        Upload the Purchase Request Excel template to populate the form.
                        <br/>Make sure you're using the correct template format.
                    </div>
                </sheet>
                <footer>
                    <button name="action_import" string="Import" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_purchase_request_import_wizard" model="ir.actions.act_window">
        <field name="name">Import from Excel</field>
        <field name="res_model">purchase.request.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>