<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cycle Count Tree View -->
    <record id="view_cycle_count_tree" model="ir.ui.view">
        <field name="name">inventory.cycle.count.tree</field>
        <field name="model">inventory.cycle.count</field>
        <field name="arch" type="xml">
            <tree string="Cycle Counts">
                <field name="date"/>
                <field name="count_type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Cycle Count Form View -->
    <record id="view_cycle_count_form" model="ir.ui.view">
        <field name="name">inventory.cycle.count.form</field>
        <field name="model">inventory.cycle.count</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="count_type"/>
                        <field name="percent_a" invisible="count_type == 'full'"/>
                        <field name="percent_b" invisible="count_type == 'full'"/>
                        <field name="percent_c" invisible="count_type == 'full'"/>
                    </group>
                    <notebook>
                        <page string="Count Logs">
                            <field name="log_ids">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="expected_quantity"/>
                                    <field name="actual_quantity"/>
                                    <field name="difference"/>
                                    <field name="planned_count_date"/>
                                    <field name="actual_count_date"/>
                                    <field name="user_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
  <!-- New Cycle Count Popup Form View -->
<record id="view_cycle_count_popup_form" model="ir.ui.view">
    <field name="name">inventory.cycle.count.popup.form</field>
    <field name="model">inventory.cycle.count</field>
    <field name="arch" type="xml">
        <form string="Create Cycle Count">
            <group>
                <field name="date"/>
                <field name="count_type"/>
                <field name="percent_a" invisible="count_type != 'custom'" required="count_type == 'custom'"/>
                <field name="percent_b" invisible="count_type != 'custom'" required="count_type == 'custom'"/>
                <field name="percent_c" invisible="count_type != 'custom'" required="count_type == 'custom'"/>
            </group>
            <footer>
                <button string="Create" name="create" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>

<!-- Cycle Count Action -->
<record id="action_cycle_count" model="ir.actions.act_window">
    <field name="name">Cycle Counts</field>
    <field name="res_model">inventory.cycle.count</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'form_view_ref': 'edge_module.view_cycle_count_popup_form'}</field>
</record>

    <!-- Add Cycle Counts menu item under Inventory menu -->
    <menuitem id="menu_cycle_count"
              name="Cycle Counts"
              action="action_cycle_count"
              parent="stock.menu_stock_inventory_control"
              sequence="20"/>
</odoo>