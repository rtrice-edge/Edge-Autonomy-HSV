<!-- views/demand_forecast_view.xml -->

<odoo>
    <data>
        <record id="action_demand" model="ir.actions.act_window">
            <field name="name">Demand</field>
            <field name="res_model">demand.model</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_demand_search"/>
        </record>
        <record id="view_demand_search" model="ir.ui.view">
            <field name="name">demand.model.search</field>
            <field name="model">demand.model</field>
            <field name="arch" type="xml">
                <search>
                    <field name="component_code"/>
                    <field name="component_name"/>
                    <field name="is_storable"/>
                    <separator/>
                    <filter string="Storable" name="storable" domain="[('is_storable', '=', 'Yes')]"/>
                    <filter string="Non-Storable" name="non_storable" domain="[('is_storable', '=', 'No')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Storable" name="group_by_storable" context="{'group_by': 'is_storable'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_demand_tree" model="ir.ui.view">
            <field name="name">demand.model.tree</field>
            <field name="model">demand.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="component_code"/>
                    <field name="component_name"/>
                    <field name="is_storable"/>
                    <field name="in_stock"/>
                    <field name="on_order"/>
                    <field name="month_1"/>
                    <field name="month_2"/>
                    <field name="month_3"/>
                    <field name="month_4"/>
                    <field name="month_5"/>
                    <field name="month_6"/>
                    <field name="month_7"/>
                </tree>
            </field>
        </record>
        <menuitem id="menu_demand" name="Demand"  parent="purchase.menu_purchase_root" sequence="25" action="action_demand"/>

    </data>
</odoo>