<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_demand" model="ir.actions.act_window">
            <field name="name">Demand</field>
            <field name="res_model">demand.model</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="view_demand_tree" model="ir.ui.view">
            <field name="name">demand.model.tree</field>
            <field name="model">demand.model</field>
            <field name="arch" type="xml">
                 <tree string="Views">
                    <field name='id' invisible="1"/>
                    <field name="component_code" widget="product_code_link"/>
                    <field name="component_name"/>
                    <field name="is_storable"/>
                    <field name="in_stock"/>
                    <field name="on_order"/>
                    <field name="mon_1"/> 
                    <field name="mon_2"/>
                    <field name="mon_3"/>
                    <field name="mon_4"/>
                    <field name="mon_5"/>
                    <field name="mon_6"/>
                    <field name="mon_7"/>
                    <field name="mon_8"/>
                </tree>
            </field>
        </record>
        <record id="product_code_link" model="ir.ui.view">
            <field name="name">product.code.link</field>
            <field name="model">demand.model</field>
            <field name="arch" type="xml">
                <div>
                    <a href="#" class="oe_link" context="{'id': id}" name="open_product">
                        <field name="component_code"/>
                    </a>
                </div>
            </field>
        </record>
        <menuitem id="menu_demand" name="Demand" parent="purchase.menu_purchase_root" sequence="25" action="action_demand"/>
    </data>
</odoo>