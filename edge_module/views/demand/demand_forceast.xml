<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_demand" model="ir.actions.act_window">
            <field name="name">Demand</field>
            <field name="res_model">demand.model</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="view_demand_tree" model="ir.ui.view">
            <field name="name">demand.model.tree</field>
            <field name="model">demand.model</field>
            <field name="arch" type="xml">
                 <tree string="Views">
                    <field name="component_code"/>
                    <field name="component_name"/>
                    <field name="is_storable"/>
                    <field name="in_stock"/>
                    <field name="on_order"/>
<field name="mon_1_val_1" invisible="1"/> <!-- Hide the original fields -->
<field name="mon_1_val_2" invisible="1"/>
<field name="combined_month_1_values" class="oe_kanban_color" 
       string="Month 1"
       t-att-value="'{} / {}'.format(record.mon_1_val_1.value, record.mon_1_val_2.value)"/>
                    <field name="month_2"/>
                    <field name="month_3"/>
                    <field name="month_4"/>
                    <field name="month_5"/>
                    <field name="month_6"/>
                    <field name="month_7"/>
                </tree>
            </field>
        </record>

        <menuitem id="menu_demand" name="Demand" parent="purchase.menu_purchase_root" sequence="25" action="action_demand"/>
    </data>
</odoo>