<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="view_account_mapping_tree" model="ir.ui.view">
        <field name="name">account.mapping.tree</field>
        <field name="model">account.mapping</field>
        <field name="arch" type="xml">
            <tree string="Account Mapping" editable="bottom">
                <field name="cost_objective"/>
                <field name="expense_type"/>
                <field name="account_number"/>
            </tree>
        </field>
    </record>

    <record id="action_account_mapping" model="ir.actions.act_window">
        <field name="name">Account Mapping</field>
        <field name="res_model">account.mapping</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_account_mapping_tree"/>
    </record>

    <menuitem id="menu_purchase_custom"
              name="Edge Addons"
              parent="purchase.menu_purchase_root"
              sequence="10"/>

    <menuitem id="menu_demand" name="Demand" parent="menu_purchase_custom" sequence="25" action="action_demand"/>

    <menuitem id="menu_account_mapping" name="Account Mapping" action="action_account_mapping" parent="menu_purchase_custom" sequence="2" groups="purchase.group_purchase_user"/>
    
    <menuitem id="menu_mrp_production_summary" name="Production Summary" action="action_mrp_production_summary" parent="menu_purchase_custom" sequence="10"/>
</data>
</odoo>