<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Kanban view for trade show equipment -->
        <record id="view_trade_show_equipment_kanban" model="ir.ui.view">
            <field name="name">trade.show.equipment.kanban</field>
            <field name="model">trade.show.equipment</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="model_number"/>
                    <field name="serial_number"/>
                    <field name="from_location"/>
                    <field name="equipment_type"/>
                    <field name="jursidiction"/>
                    <field name="usml_category"/>
                    <field name="eccn_number"/>
                    <field name="ushts_number"/>
                    <field name="coo"/>
                    <field name="license"/>
                    <field name="license_line_number"/>
                    <field name="manufacturer"/>
                    <field name="value"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <ul>
                                        <li t-if="record.model_number.value">
                                            <t t-esc="record.model_number.value"/>
                                        </li>
                                        <li t-if="record.serial_number.value">
                                            <t t-esc="record.serial_number.value"/>
                                        </li>
                                        <li t-if="record.from_location.value">
                                            <t t-esc="record.from_location.value"/>
                                        </li>
                                        <li t-if="record.equipment_type.value">
                                            <t t-esc="record.equipment_type.value"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form view for trade show equipment -->
        <record id="view_trade_show_equipment_form" model="ir.ui.view">
            <field name="name">trade.show.equipment.form</field>
            <field name="model">trade.show.equipment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Equipment Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="model_number"/>
                                <field name="serial_number"/>
                                <field name="manufacturer"/>
                                <field name="value"/>
                            </group>
                            <group>
                                <field name="from_location"/>
                                <field name="equipment_type"/>
                                <field name="jursidiction"/>
                                <field name="coo"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Export Control">
                                <group>
                                    <field name="usml_category"/>
                                    <field name="eccn_number"/>
                                    <field name="ushts_number"/>
                                    <field name="license"/>
                                    <field name="license_line_number"/>
                                </group>
                            </page>
                            <page string="Transfer History">
                                <field name="transfer_history_ids">
                                    <tree>
                                        <field name="from_location_id"/>
                                        <field name="to_location_id"/>
                                        <field name="transfer_date"/>
                                        <field name="notes"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view for trade show equipment -->
        <record id="view_trade_show_equipment_search" model="ir.ui.view">
            <field name="name">trade.show.equipment.search</field>
            <field name="model">trade.show.equipment</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="model_number"/>
                    <field name="serial_number"/>
                    <field name="from_location"/>
                    <field name="equipment_type"/>
                    <field name="jursidiction"/>
                    <field name="usml_category"/>
                    <field name="eccn_number"/>
                    <field name="ushts_number"/>
                    <field name="coo"/>
                    <field name="license"/>
                    <field name="license_line_number"/>
                    <field name="manufacturer"/>
                    <field name="value"/>
                </search>
            </field>
        </record>

        <!-- Action to open the trade show equipment views -->
        <record id="action_trade_show_equipment" model="ir.actions.act_window">
            <field name="name">Trade Show Equipment</field>
            <field name="res_model">trade.show.equipment</field>
            <field name="view_mode">kanban,form</field>
        </record>

    </data>
</odoo>