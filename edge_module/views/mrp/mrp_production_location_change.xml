    <!-- Inherit MO form to add location changes button -->
    <record id="mrp_production_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" 
                        name="action_view_location_changes" icon="fa-map-marker">
                    <field string="Location Changes" name="location_change_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

    <!-- Action window -->
    <record id="action_mrp_production_location_change" model="ir.actions.act_window">
        <field name="name">Location Changes</field>
        <field name="res_model">mrp.production.location.change</field>
        <field name="view_mode">tree,form</field>
