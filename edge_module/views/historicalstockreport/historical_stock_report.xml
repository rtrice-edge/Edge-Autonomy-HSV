<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_historical_stock_report_wizard_form" model="ir.ui.view">
            <field name="name">historical.stock.report.wizard.form</field>
            <field name="model">historical.stock.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Historical Stock Report Parameters">
                    <group>
                        <group>
                            <field name="date_snapshot"/>
                        </group>
                        <group>
                            <field name="location_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                     <group>
                         <field name="include_zero_quantities"/>
                    </group>
                    <footer>
                        <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_historical_stock_report_line_tree" model="ir.ui.view">
            <field name="name">historical.stock.report.line.tree</field>
            <field name="model">historical.stock.report.line</field>
            <field name="arch" type="xml">
                <tree string="Historical Stock Report Lines"
                      create="false" edit="false" delete="false"
                      decoration-muted="quantity == 0">
                    <field name="quantity" invisible="1"/> <field name="product_default_code" optional="show"/>
                    <field name="product_name"/>
                    <field name="lot_name" optional="show"/> <field name="quantity" sum="Total Quantity"/>
                    <field name="uom_name" string="UoM"/> <field name="cost" optional="show"/>
                    <field name="total_value" sum="Total Value" optional="show"/>
                    <field name="report_date" optional="hide"/>
                    <field name="report_location_name" optional="show"/> <field name="create_date" string="Generated On" optional="show"/>
                    <field name="create_uid" string="Generated By" optional="show" widget="many2one_avatar_user"/>
                    <field name="product_id" optional="hide"/>
                    <field name="lot_id" optional="hide"/>
                    <field name="uom_id" optional="hide"/>
                    <field name="report_location_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_historical_stock_report_line_form" model="ir.ui.view">
            <field name="name">historical.stock.report.line.form</field>
            <field name="model">historical.stock.report.line</field>
            <field name="arch" type="xml">
                <form string="Historical Stock Report Line" create="false" edit="false" delete="false">
                    <sheet>
                         <group>
                            <group string="Report Parameters">
                                <field name="report_date"/>
                                <field name="report_location_name"/>
                                <field name="report_location_id" optional="hide"/>
                                <field name="create_date" string="Generated On"/>
                                <field name="create_uid" string="Generated By" widget="many2one_avatar_user"/>
                            </group>
                            <group string="Product Details">
                                <field name="product_name"/>
                                <field name="product_default_code"/>
                                <field name="lot_name"/>
                                <field name="product_id" optional="hide"/>
                                <field name="lot_id" optional="hide"/>
                            </group>
                            <group string="Calculated Values">
                                <field name="quantity"/>
                                <field name="uom_name" string="UoM"/>
                                <field name="uom_id" optional="hide"/>
                                <field name="cost"/>
                                <field name="total_value"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_historical_stock_report_line_search" model="ir.ui.view">
            <field name="name">historical.stock.report.line.search</field>
            <field name="model">historical.stock.report.line</field>
            <field name="arch" type="xml">
                <search string="Search Historical Stock Lines">
                    <field name="product_name" filter_domain="['|', ('product_name', 'ilike', self), ('product_default_code', 'ilike', self)]" string="Product"/>
                    <field name="product_default_code"/>
                    <field name="lot_name"/>
                    <field name="report_location_name"/>
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <field name="report_location_id"/>
                    <field name="report_date"/>
                    <filter string="With Lot/Serial Number" name="filter_with_lot" domain="[('lot_id', '!=', False)]"/>
                    <filter string="Without Lot/Serial Number" name="filter_no_lot" domain="[('lot_id', '=', False)]"/>
                     <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Product" name="group_by_product" context="{'group_by': 'product_id'}"/> <filter string="Location" name="group_by_location" context="{'group_by': 'report_location_id'}"/>
                        <filter string="Snapshot Date" name="group_by_date" context="{'group_by': 'report_date'}"/>
                        <filter string="Lot/Serial" name="group_by_lot" context="{'group_by': 'lot_id'}"/>
                    </group>
               </search>
           </field>
        </record>


        <record id="action_historical_stock_report_wizard" model="ir.actions.act_window">
            <field name="name">Historical Stock Report</field>
            <field name="res_model">historical.stock.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_historical_stock_report_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_historical_stock_report"
            name="Historical Stock Report"
            parent="stock.menu_warehouse_report"
            action="action_historical_stock_report_wizard"
            sequence="460"/>

    </data>
</odoo>