<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Report Action -->
        <record id="action_report_purchase_lines" model="ir.actions.report">
            <field name="name">Purchase Order Lines</field>
            <field name="model">purchase.order.line</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">module_name.report_purchase_lines</field>
            <field name="report_file">module_name.report_purchase_lines</field>
            <field name="binding_model_id" ref="purchase.model_purchase_order_line"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Report Template -->
        <template id="report_purchase_lines">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Purchase Order Lines</h2>
                        
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Job</th>
                                    <th>Job Number</th>
                                    <th>Expense Type</th>
                                    <th>Requestor</th>
                                    <th>Vendor Number</th>
                                    <th>Manufacturer</th>
                                    <th>Manufacturer PN</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.product_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.product_qty"/>
                                            <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                        </td>
                                        <td>
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td>
                                            <span t-field="line.job"/>
                                        </td>
                                        <td>
                                            <span t-field="line.job_number"/>
                                        </td>
                                        <td>
                                            <span t-field="line.expense_type"/>
                                        </td>
                                        <td>
                                            <span t-field="line.requestor_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.vendor_number"/>
                                        </td>
                                        <td>
                                            <span t-field="line.manufacturer"/>
                                        </td>
                                        <td>
                                            <span t-field="line.manufacturernumber"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>

        <!-- Menu Item -->
        <menuitem id="menu_purchase_lines_report"
                  name="All Purchase Order Lines"
                  action="action_report_purchase_lines"
                  parent="purchase.purchase_report_main"
                  sequence="21"
                  groups="purchase.group_purchase_manager"/>
    </data>
</odoo>