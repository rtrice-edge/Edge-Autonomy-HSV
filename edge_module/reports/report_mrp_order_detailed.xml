<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>
    <!-- Report Action -->
    <record id="action_report_mo_detailed" model="ir.actions.report">
        <field name="name">Detailed MO Report</field>
        <field name="model">mrp.production</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">edge_module.report_mrp_order_detailed</field>
        <field name="report_file">edge_module.report_mrp_order_detailed</field>
        <field name="print_report_name">'Detailed MO Report - %s' % object.name</field>
        <field name="binding_model_id" ref="mrp.model_mrp_production"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Add Button to MO Form View -->
    <record id="mrp_production_form_view_inherit_detailed_report" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.detailed.report</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_open_label_type']" position="after">
                <button name="%(action_report_mo_detailed)d" string="Print Detailed MO Report" type="action" groups="base.group_user"/>
            </xpath>
        </field>
    </record>


        <template id="report_mrp_order_detailed">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-6">
                                <h1 style="font-size: 24px;"><strong>MO: <span t-field="o.name"/></strong></h1>
                                <h2 style="font-size: 20px;"><strong>Product: <span t-field="o.product_id"/></strong></h2>
                                <h2 style="font-size: 20px;">
                                    <strong>Lot/Serial: 
                                        <span t-if="o.lot_producing_id">
                                            <span t-field="o.lot_producing_id.name"/>
                                        </span>
                                        <span t-elif="o.lot_producing_ids">
                                            <t t-foreach="o.lot_producing_ids" t-as="lot">
                                                <span t-field="lot.name"/><t t-if="not lot_last">, </t>
                                            </t>
                                        </span>
                                        <span t-else="">N/A</span>
                                    </strong>
                                </h2>
                            </div>
                            <div class="col-6">
                                <table class="table table-sm" style="font-size: 12px;">
                                    <tr t-if="o.user_id">
                                        <td><strong>Responsible:</strong></td>
                                        <td><span t-field="o.user_id"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Quantity:</strong></td>
                                        <td>
                                            <span t-field="o.product_qty"/>
                                            <span t-field="o.product_uom_id.name" groups="uom.group_uom"/>
                                        </td>
                                    </tr>
                                    <tr t-if="o.date_start">
                                        <td><strong>Start Date:</strong></td>
                                        <td><span t-field="o.date_start"/></td>
                                    </tr>
                                    <tr t-if="o.date_finished">
                                        <td><strong>End Date:</strong></td>
                                        <td><span t-field="o.date_finished"/></td>
                                    </tr>
                                    <tr t-if="o.bom_id">
                                        <td><strong>BOM:</strong></td>
                                        <td><span t-field="o.bom_id.display_name"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div t-if="o.workorder_ids" groups="mrp.group_mrp_routings">
                            <h3>Operations Details</h3>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Operation</th>
                                        <th>WorkCenter</th>
                                        <th>Workers</th>
                                        <th>Total Duration</th>
                                        <th>Comments</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.workorder_ids" t-as="workorder">
                                        <tr>
                                            <td><span t-field="workorder.name"/></td>
                                            <td><span t-field="workorder.workcenter_id.name"/></td>
                                            <td>
                                                <t t-set="workers" t-value="workorder.time_ids.mapped('user_id')"/>
                                                <t t-foreach="workers" t-as="worker">
                                                    <div><span t-field="worker.name"/></div>
                                                </t>
                                            </td>
                                            <td><span t-field="workorder.duration" t-options="{'widget': 'float_time'}"/></td>
                                            <td>
                                                <t t-foreach="workorder.message_ids.filtered(lambda m: m.message_type == 'comment')" t-as="message">
                                                    <div>
                                                        <strong t-field="message.author_id"/>: <span t-field="message.body"/>
                                                    </div>
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <div t-if="o.move_raw_ids">
                            <t t-call="mrp.report_mrp_production_components"/>
                        </div>

                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>