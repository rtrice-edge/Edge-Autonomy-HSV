<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="request_for_quotation" inherit_id="purchase.report_purchasequotation_document">
        <td class="text-end">
            <span t-field="line.product_manufacturernumber"/>
        </td>
        <td>
            <span t-field="line.product_manufacturer"/>
        </td>
        <xpath expr="//thead/tr[1]" position="before">
            <th name="th_line_number"><strong>L.#.</strong></th>
        </xpath>
        <xpath expr="//thead/tr/th[@name='th_expected_date']" position="replace">
            <th name="th_need_by_date" class="text-center"><strong><t t-esc="'Need by Date'"/></strong></th>
        </xpath>
        <xpath expr="//tbody/t/tr/t/td" position="before">
            <t t-set="line_number" t-value="1"/>
        </xpath>
        <xpath expr="//tbody/t[@t-foreach='o.order_line']/tr[not(@t-att-class='bg-200 fw-bold o_line_section' or @t-att-class='fst-italic o_line_note')]" position="inside">
            <td class="text-end">
                <span t-esc="line_number"/>
                <t t-set="line_number" t-value="line_number + 1"/>
            </td>
        </xpath>
    </template>
</odoo>