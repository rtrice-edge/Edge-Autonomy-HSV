<?xml version="1.0" encoding="UTF-8"?>


<odoo>
    <data>
        <template id="purchase_order_custom" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[hasclass('page')]" position="after">
                <div class="text-center custom-text-section" style="border: 3px solid #686868; padding: 10px;"> <!-- Set the desired font size here -->
                    
                    <span style="font-weight: bold; font-size: 10px; line-height: 0.5;">Please package each individual unit in individual bags with a printed label including the following, when applicable:</span><br/>
                    
                    <span style="font-weight: 300; font-size: 8px; line-height: 0.5">Edge Autonomy Part #, Description, PO Number / Line, Lot Number, Production order number, Vendor Part number, and Quantity (should be one).</span>
                    <br/><br/>
                    <span style="font-weight: bold; font-size: 10px; line-height: 0.5">Every shipment must include the following:</span><br/>
                    
                    <span style="font-weight: 300; font-size: 8px; line-height: 0.5">Certificate of Conformance, Inspection Report and Full Material Traceability Report</span>
                    <br/><br/>
                    <span style="font-weight: bold; font-size: 10px; line-height: 0.5">Vendors must be able to provide the following:</span><br/>
                    
                    <span style="font-weight: 300; font-size: 8px; line-height: 0.5">Email response to confirm ability to deliver quantity of each line item on or before need by date; response required within 5 business days. Automated bi-weekly updates on status of order.</span>
                </div>
            </xpath>
            <xpath expr="//div[@id='total']" position="after">
                <br/><br/>
            </xpath>
            <xpath expr="//div[@t-field='o.partner_id']" position="before">
                <strong>Vendor Address: </strong>
            </xpath>
            <xpath expr="//t/t/t/div[1]" position="after" style="font-size: 8px; text-align: right;">
                <br/>
                <strong style="font-size: 10px; font-weight: bold">Invoice to: </strong><br/>
                <strong style="font-size: 10px; font-weight: bold">Attn: </strong>
                <span style="font-size: 10px">Lisa Smith-McClain</span><br/>
                <strong style="font-size: 10px; font-weight: bold">Phone: </strong>
                <span style="font-size: 10px" t-options='{"widget": "fa", "prefix": "fa-phone"}'>571-531-9660</span><br/>
                <strong style="font-size: 10px; font-weight: bold">Email: </strong>
                <span style="font-size: 10px">aphuntsville@edgeautonomy.io</span><br/>
                <br/>
                <br/>
                <strong style="font-size: 10px; font-weight">Purchasing Contact: </strong><br/>
                <strong style="font-size: 10px; font-weight: bold">Name: </strong>
                <!--span style="font-size: 10px; line-height: 0.8;" t-field='o.purchase_contact.name'/><br/-->
                <span style="font-size: 10px">Beth Anne Barrett</span><br/>
                <strong style="font-size: 10px; font-weight: bold">Phone: </strong>
                <!--span style="font-size: 10px; line-height: 0.8;" t-field='o.purchase_contact.work_phone'/><br/-->
                <span style="font-size: 10px" t-options='{"widget": "fa", "prefix": "fa-phone"}'>571-531-9660</span><br/>
                <strong style="font-size: 10px; font-weight: bold">Email: </strong>
                <!--span style="font-size: 10px; line-height: 0.8;" t-field='o.purchase_contact.work_email'/><br/-->
                <span style="font-size: 10px">bbarrett@edgeautonomy.io</span>
            </xpath>
            <xpath expr="//thead" position="replace">
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_line_number"><strong>L.#.</strong></th>
                        <th name="th_description"><strong>Description</strong></th>
                        <th name="th_vendor_number"><strong>Vendor PN</strong></th>
                        <th name="th_date_req" class="text-center"><strong>Date Req.</strong></th>
                        <th name="th_quantity" class="text-end"><strong>Qty</strong></th>
                        <th name="th_price_unit" class="text-end"><strong>Unit Price</strong></th>
                        <th name="th_subtotal" class="text-end"><strong>Amount</strong>
                        </th>
                    </tr>
                </thead>
            </xpath>
            <xpath expr="//tbody" position="replace">
                <tbody>
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="line_number" t-value="1"/>
                    <t t-foreach="o.order_line" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>

                        <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td class="text-center">
                                    <span t-esc="line_number"/>
                                    <t t-set="line_number" t-value="line_number + 1"/>
                                </td>
                                <td id="product">
                                    <span t-field="line.name"/>
                                </td>
                                <td name="Vendor PN">
                                    <span t-field="line.vendor_number"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.date_planned"/>
                                </td>
                                <td class="text-end">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                    <span t-if="line.product_packaging_id">
                                        (<span t-field="line.product_packaging_qty" t-options="{&quot;widget&quot;: &quot;integer&quot;}"/> <span t-field="line.product_packaging_id"/>)
                                    </span>
                                </td>
                                <td class="text-end">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-end">
                                    <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99" id="section">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99" id="note">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>
                        <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-end">
                                <td colspan="99" id="subtotal">
                                    <strong class="mr16">Subtotal</strong>
                                    <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </xpath>
            <xpath expr="//div[@t-if='o.picking_type_id and o.picking_type_id.warehouse_id']" position="after">
                <br/><br/>
                 <strong>Shipping Method: </strong>
                 <span style="font-size: 10px; line-height: 0.8; color: #000000" t-field="o.shipping_method"/>
                    <br/>
                    <strong>Vendor Terms: </strong>
                    <span style="font-size: 10px; line-height: 0.8; color: #000000" t-field="o.po_vendor_terms"/>
                    <br/>
                <div id="informations">
                <div t-if="o.user_id">
                    <strong>Purchase Representative:</strong>
                    <span style="font-size: 10px; line-height: 0.8; color: #000000" t-field="o.user_id" class="m-0"/>
                    <br/>
                </div>
                <div t-if="o.partner_ref">
                    <strong>Your Order Reference:</strong>
                    <span style="font-size: 10px; line-height: 0.8; color: #000000" t-field="o.partner_ref" class="m-0"/>
                    <br/>
                </div>
                <div t-if="o.state in ['purchase','done'] and o.date_approve">
                    <strong>Order Date:</strong>
                   <span style="font-size: 10px; line-height: 0.8; color: #000000" t-field="o.date_approve" class="m-0"/>
                   <br/>
                </div>
                <div t-elif="o.date_order">
                    <strong >Order Deadline:</strong>
                    <span style="font-size: 10px; line-height: 0.8; color: #000000" t-field="o.date_order" class="m-0"/>
                    <br/>
                </div>
                </div>
            </xpath>

                <!-- <div class="container">
                    <div class="row">
                        <div class="col-3">
                            <strong>Shipping Method: </strong>
                        </div>
                        <div class="col-9">
                            <span t-field="o.shipping_method"/>
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-3">
                            <strong>Vendor Terms: </strong>
                        </div>
                        <div class="col-9">
                            <span t-field="o.po_vendor_terms"/>
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-3">
                            <strong>Deliver to: </strong>
                        </div>
                        <div class="col-9">
                            <span t-field="o.edge_recipient"/>
                        </div>
                    </div>
                </div>
            </xpath> -->
            <xpath expr="//div[@class='page']" position="attributes">
                <attribute name="style">font-size: 80%;</attribute>
            </xpath>
            <xpath expr="//div[@class='page']/div[@id='informations']" position="replace">
            </xpath>
            <xpath expr="//t[@t-if='o.dest_address_id']/t/strong" position="replace">
                <strong>Shipping Address:</strong>
            </xpath>
        </template>
    </data>
</odoo>