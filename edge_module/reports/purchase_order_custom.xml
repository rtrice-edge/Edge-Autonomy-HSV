<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="report_purchase_order_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[hasclass('page')]" position="inside">
            <div class="oe_link_field" style="margin-top: 20px;">
                <a href="https://edgeautonomy.io/about-us/solutions-terms-and-conditions/" target="_blank">Edge Autonomy Terms and Conditions</a>
            </div>
        </xpath>
        <xpath expr="//p[@t-field='o.notes']" position="replace"/>
        <style>
            .company_logo {
                width: 400px !important; /* Adjust the width as needed */
                height: auto !important;
            }
            .shipping-address {
                float: right;
                clear: right;
            }
            div[t-field="o.partner_id"] {
                float: right;
                clear: right;
            }
        </style> 
    </template>
</odoo>