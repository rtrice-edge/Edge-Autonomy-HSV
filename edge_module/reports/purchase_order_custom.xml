<?xml version="1.0" encoding="UTF-8"?>


<odoo>
    <data>
        <template id="purchase_order_custom" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[hasclass('page')]" position="after">
                <div class="oe_link_field text-center custom-text-section" style="font-size: 12px;"> <!-- Set the desired font size here -->
                    <!-- <a href="https://edgeautonomy.io/about-us/solutions-terms-and-conditions/" target="_blank" style="font-weight: bold;">Edge Autonomy Terms and Conditions</a-->
                    <br/><br/>
                    <span style="font-weight: bold; font-size: 10px;">Please package each individual unit in individual bags with a printed label including the following, when applicable:</span>
                    <br/>
                    <span style="font-weight: 300; font-size: 8px;">Edge Autonomy Part #, Description, PO Number / Line, Lot Number, Production order number, Vendor Part number, and Quantity (should be one).</span>
                    <br/><br/>
                    <span style="font-weight: bold; font-size: 10px;">Every shipment must include the following:</span>
                    <br/>
                    <span style="font-weight: 300; font-size: 8px;">Certificate of Conformance, Inspection Report and Full Material Traceability Report</span>
                    <br/><br/>
                    <span style="font-weight: bold; font-size: 10px;">Vendors must be able to provide the following:</span>
                    <br/>
                    <span style="font-weight: 300; font-size: 8px;">Email response to confirm ability to deliver quantity of each line item on or before need by date; response required within 5 business days. Automated bi-weekly updates on status of order.</span>
                </div>
            </xpath>
            <xpath expr="//t/t/t/div[1]" position="after" style="font-size: 12px; text-align: right;">
                <br/><br/>
                <span style="font-weight: bold; font-size: 10px;">Invoice to:</span>
                <br/>
                <span style="font-weight: 300; font-size: 10px;">Attn: Lisa Smith-McClain</span>
                <br/>
                <span style="font-weight: 300; font-size: 10px;">805-592-1867</span>
                <br/>
                <span style="font-weight: 300; font-size: 10px;">aphuntsville@edgeautonomy.io</span>
            </xpath>
            <xpath expr="//thead/tr/th[@name='th_description']" position="before">
                <th name="th_line_number"><strong>L.#.</strong></th>
            </xpath>
            <xpath expr="//thead/tr/th[@name='th_description']" position="after">
                <th name="th_vendor_number"><strong>Vendor PN</strong></th>
            </xpath>
            <xpath expr="//td[@name='td_taxes']" position="before">
                <td name="Vendor PN">
                    <span t-field="line.vendor_number"/>
                </td>
            </xpath>
            <xpath expr="//tbody/t[@t-foreach='o.order_line']" position="before">
                <t t-set="line_number" t-value="1"/>
            </xpath>
            <xpath expr="//tbody/t/tr/t/td[@id='product']" position="before">
                <td class="text-center">
                    <span t-esc="line_number"/>
                    <t t-set="line_number" t-value="line_number + 1"/>
                </td>
            </xpath>
            <xpath expr="//div/h2" position="after">
                <div class="row">
                    <div class="col-3">
                        <strong>Shipping Method: </strong>
                    </div>
                    <div class="col-9">
                        <span t-field="o.shipping_method"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//tbody/t/tr/t/td[5]" position="replace">
                <td class="text-center">
                    <span t-field="line.date_planned" t-options='{"date_only": True}'/>
                </td>
            </xpath>
            <xpath expr="//tbody/t/tr/t/td[4]" position="replace">
                <td></td>
            </xpath>
            <xpath expr="//thead/tr/th[4]" position="replace">
                <td></td>
            </xpath>
            <xpath expr="//div/h2" position="after">
                <div class="row">
                    <div class="col-3">
                        <strong>Vendor Terms: </strong>
                    </div>
                    <div class="col-9">
                        <span t-field="o.po_vendor_terms"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@class='page']" position="attributes">
                <attribute name="style">font-size: 80%;</attribute>
            </xpath>
        </template>
    </data>
</odoo>