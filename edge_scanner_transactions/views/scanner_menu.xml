<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_scanner_landing_form" model="ir.ui.view">
      <field name="name">scanner.handheld.landing.form</field>
      <field name="model">scanner.handheld</field>
      <field name="arch" type="xml">
        <form string="Scanner">
          <button name="action_inventory_transfer"
                  string="Inventory Transfer"
                  type="object"
                  class="btn-primary"/>
        </form>
      </field>
    </record>

    <!-- 2) Action to open that form -->
    <record id="action_scanner_landing" model="ir.actions.act_window">
      <field name="name">Scanner</field>
      <field name="res_model">scanner.handheld</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_scanner_landing_form"/>
      <field name="target">current</field>
    </record>

    <!-- 3) Menu entry pointing at your new landing action -->
    <menuitem id="scanner_handheld_menu_root"
              name="Scanner"
              parent="stock.menu_stock_root"
              sequence="5"
              action="action_scanner_landing"
              groups="stock.group_stock_user"
              icon="fa fa-barcode"/>
</odoo>
